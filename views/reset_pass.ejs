<%- include('styling.ejs') %>
<div class="content">
    <h1 class="title-header">Reset Password</h1> 
    <form action="/reset" method="POST">
        <label for="email" class="form-header">Email</label>
        <input type="email" name="email" required>
        <label for="password" class="form-header">Password</label>
        <i class="fa-solid fa-eye icon" onclick="toggle()"></i>
        <i class="fa-solid fa-eye-slash icon" onclick="toggle()"></i>
        <input type="password" class="password" name="password" required>
        <button type="submit">Reset Password</button>
    </form>
    
    <a href="/register">Sign Up</a>
    <a href="/">Home</a>
    <%- include('pw_view.ejs') %>
</div>