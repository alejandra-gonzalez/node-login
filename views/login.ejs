<link href="css/styles.css" rel="stylesheet" type="text/css">
<script src="https://kit.fontawesome.com/69c13930bc.js" crossorigin="anonymous"></script>
<div class="content">
    <h1 class="title-header">Login</h1> 
    <form action="/login" method="POST">
        <label for="username" class="form-header">Username</label>
        <input type="text" name="username" required>
        <label for="password" class="form-header">Password</label>
        <i class="fa-solid fa-eye icon" onclick="toggle()"></i>
        <input type="password" class="password" name="password" required>
        <button type="submit">login</button>
    </form>
    <a href="/reset_pass" id="forgot-pass">Forgot Password?</a>
    
    <a href="/register">Sign Up</a>
    <a href="/">Home</a>
    <script>
        function toggle() {
            let temp = document.getElementsByClassName("password")[0];
            if (temp.type === "password") {
                temp.type = "text";
            }
            else {
                temp.type = "password";
            }
        }</script>
</div>